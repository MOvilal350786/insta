<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800">



    <div class="flex justify-between text-white px-2 py-2">
        <div class="logoIcon w-36 h-20 overflow-hidden bg-cover">
            <img class=" text-xl w-full h-16" src="/images/logo.png" alt="">
        
        </div>

        <div class="msg heart flex flex-row gap-20 text-[35px] ">
            <div>        
                    <i class="ri-heart-line"></i>
            </div>

            <div>
                <i class="mr-[20px]  ri-messenger-line"></i>
            </div>
        </div>


    </div>

   
  <div class="ParentAll">


    <% posts.reverse().forEach(function(ele){%>

        <div class="mb-20">

            <div class="ProfileImg mb-2 flex flex-row">
                <div class="w-20 h-20 rounded-full overflow-hidden">
                    <img class="bg-cover w-full h-full object-cover" src="/images/uploads/<%= ele.user.ProfileImage %>" alt="">
                </div>
                <div class=" flex flex-col mt-5">
                    <div>
                        <h1 class=" px-2 text-white font-semibold"><%= ele.user.username %></h1>
                    </div>
                    <div>
                        <h1 class=" px-2 text-white opacity-50"><%= ele.user.name %></h1>
                    </div>
                </div>
                
        
            </div>
        
            <div class="Postimage flex justify-center ">
                <div class="w-full h-full  object-cover">
                    <img class="w-full h-full" src="/images/uploads/<%= ele.picture %>" alt="">
                   
                </div>
            </div>
        
    
            <div class="text-white flex justify-between text-3xl px-2">
                <div class="flex flex-row gap-10  ">
                  
                    <a href="/likes/post/<%= ele._id %>">

                        <% if(ele.likes.indexOf(user._id)!==-1){%>

                            <i class="ri-heart-fill text-red-700"></i>
    
                        <%}
                        else{%>
                        <i class="ri-heart-line"></i>
                        <%}%>
                    </a>


                   <h1><i class="ri-chat-3-line"></i></h1>
                   <h1><i class="ri-share-circle-fill"></i></h1>
                   
                </div>
        
        
                <div>
                    <h1><i class="ri-bookmark-line"></i></h1>
                </div>
        
            </div>
        
        
                <div class="text-white">
                    <h1 ><%= ele.likes.length %></h1>
                    <div class="flex flex-row">
                        <h1><%= user.username %></h1>
                        <h1 class=" px-2"><%= ele.caption %></h1>
                    </div>
                    </div>
        

        </div>

        
   

   
            <%}) %>

    </div>
    
  </div>


</div>

<% include ./partials/footer.ejs %>