            <% include ./partials/header.ejs %>
            <div class="w-full min-h-screen bg-zinc-800 text-white">

                <div>
                    <div class="flex justify-between px-10 py-10">
                        <h1 class="text-blue-800 text-xl "><a href="/profile">Profile</a></h1>
                        <h1>Upload Post</h1>
                        <h1 class="text-blue-800 text-3xl"><a href="/feed"><i class="ri-home-line"></i></a></h1>
                    </div>
              

                </div>
            
                <div class="flex justify-center items-center mt-24">

                    
                    <div class="mt-5">

                        <div class="h-32 w-32 rounded-full bg-blue-600 overflow-hidden bg-cover"> 
                            
                            <img class="w-full h-full object-cover" src="/images/uploads/<%= user.ProfileImage %>" alt="">       
                            </div>
                                       
                                        <button id="but" class="bg-white  hover:scale-x-110  text-black hover:text-white hover:bg-black px-10 py-2 rounded-xl mt-2 ">Select Image</button>
                    </div>

                    
                </div>
                

               <div class="flex justify-center mt-5 text-black">
                
                <form action="/upload" method="post" enctype="multipart/form-data" >
                    <input id="apl" hidden type="file" name="images">
                   
                    <textarea class="px-20 py-5 block rounded-xl m-2" type="text" name="caption" placeholder="Caption of Image"><%= user.caption %></textarea>
                    <div class="flex justify-center">
                        <input type="submit" value="submit" class="hover:bg-red-600 bg-white hover:scale-x-110 px-10 mt-2  rounded-xl py-2">

                    </div>
                   
                </form>
               </div>


            </div>

          <script>
            document.querySelector("#but").addEventListener("click", function(req, res){
                document.querySelector("#apl").click();
            })



          </script>



